<h1>Cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <ul>
    <%= cl_image_tag cocktail.photo.url(:size_index) %>
    <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
    <%= link_to "delete", cocktail_path(cocktail), method: :delete %>
  </ul>
<% end %>

<%= link_to "Create a new cocktail", new_cocktail_path %>
